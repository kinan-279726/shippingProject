@{
}
@model List<PaymentMethodDto>
<div class="col-12 grid-margin stretch-card h-100 ">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title mt-5 mb-5">@ResLabels.PaymentMethod</h4>
            <table class="table table-dark">
                <thead>
                    <tr>
                        <th> # </th>
                        <th> @ResShipping.ArabicName </th>
                        <th> @ResShipping.EnglishName </th>
                        <th> @ResLabels.Commission </th>
                        <th> @ResActions.Action </th>
                    </tr>
                </thead>
                <tbody>
                        @for(int x =1; x<=Model.Count; x++){
                        <tr>
                            <td>@x</td>
                            <td> @Model[x-1].MethodArabicName </td>
                            <td> @Model[x-1].MethodEnglishName </td>
                            <td> % @Model[x-1].Commission </td>
                            <td>
                                <a asp-action="Edit" asp-controller="PaymentMethod" asp-route-id="@Model[x-1].Id" class="btn btn-info">@ResActions.Edit</a>
                                <button asp-action="ChangeStatus" asp-controller="PaymentMethod" data-id="@Model[x-1].Id" asp-route-id="@Model[x-1].Id" class="btn btn-danger" onclick="return confirm(@ResMessages.ConfirmDeleteRecord);">@ResActions.Delete</button>
                            </td>
                        </tr>
                        }
                </tbody>
            </table>
            <a asp-controller="PaymentMethod" asp-action="Add" class="btn btn-primary mt-5">@ResActions.New</a>
        </div>
    </div>
</div>
@section Scripts {
}